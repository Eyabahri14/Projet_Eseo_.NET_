                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white" style="max-width: 16rem; margin-bottom: 1rem; border-color: darkolivegreen; border-width: thick;">
                        <div class="card-header" style="color: darkolivegreen;font-size: 1.6rem; font-weight: bolder">Les Patriotes</div>
                        <div class="card-body text-dark">
                            @if (ViewBag.ProductionEconomiqueTotaleParDivision[2] > -99999)
