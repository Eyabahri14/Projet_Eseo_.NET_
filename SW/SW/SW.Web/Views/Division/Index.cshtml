@model IEnumerable<SW.Models.Division>

@{
    ViewData["Title"] = "Tableau de bord des Divisions";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    <style>

        .container-fluid {
            margin-top: 20px;
            text-align: center;
           
        }

        .btn {
            font-size: 18px;
        }

        th, td {
            font-size: 18px;
        }

        .fa {
            font-size: 18px;
        }

        .table-responsive {
            width: 100%; 
            margin: 0 auto;
            overflow-x: auto; 
        }

        .left-align {
            text-align: left;
        }
    </style>
</head>

<body>

    <div class="container-fluid">
        <h1>Tableau de bord des Divisions</h1>
        <div class="container-fluid" >
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white" style="max-width: 16rem; margin-bottom: 1rem; border-color: darkred; border-width: thick;">
                        <div class="card-header" style="color: darkred;font-size: 1.7rem; font-weight: 300">Les Nouveaux</div>
                        <div class="card-body text-dark">
                            @if (ViewBag.ProductionEconomiqueTotaleParDivision[0] > -99999)
                            {
                                <h5 class="card-title" style="font-size: 1rem;">
                                    Production économique : <span style="color: blue">@ViewBag.ProductionEconomiqueTotaleParDivision[0].ToString("0.##")</span>
                                </h5>
                            }
                            else
                            {
                                <p class="card-text">Pas de données sur la production économique</p>
                            }
                        </div>
                        <div class="card-body text-dark">
                            @if (ViewBag.BonheurMoyenParDivision[0] > -99999)
                            {
                               <h5 class="card-title" style="font-size: 1rem;">
                                    Bonheur : <span style="color: blue">@ViewBag.BonheurMoyenParDivision[0].ToString("0.##")</span>
                                </h5>
                            }
                            else
                            {
                                <p class="card-text">Pas de données sur le bonheur</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white" style="max-width: 16rem; margin-bottom: 1rem; border-color: darkblue; border-width: thick;">
                        <div class="card-header" style="color: darkblue;font-size: 1.6rem; font-weight: bold">Les Fonctionnaires</div>
                        <div class="card-body text-dark">
                            @if (ViewBag.ProductionEconomiqueTotaleParDivision[1] > -99999)
                            {
                                <h5 class="card-title" style="font-size: 1rem;">
                                    Production économique : <span style="color: blue">@ViewBag.ProductionEconomiqueTotaleParDivision[1].ToString("0.##")</span>
                                </h5>
                            }
                            else
                            {
                                <p class="card-text">Pas de données sur la production économique</p>
                            }
                        </div>
                        <div class="card-body text-dark">
                            @if (ViewBag.BonheurMoyenParDivision[1] > -99999)
                            {
                                <h5 class="card-title" style="font-size: 1rem;">
                                    Bonheur : <span style="color: blue">@ViewBag.BonheurMoyenParDivision[1].ToString("0.##")</span>
                                </h5>
                            }
                            else
