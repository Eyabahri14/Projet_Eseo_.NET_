                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white" style="max-width: 16rem; margin-bottom: 1rem; border-color: black; border-width: thick;">
                        <div class="card-header" style="color: black;font-size: 1.6rem; font-weight: 500">Les Travailleurs</div>
                        <div class="card-body text-dark">
                            @if (ViewBag.ProductionEconomiqueTotaleParDivision[4] > -99999)
                            {
                                <h5 class="card-title" style="font-size: 1rem;">
