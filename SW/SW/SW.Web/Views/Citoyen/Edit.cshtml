@model SW.Models.Citoyen

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Modifier</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nom" class="form-label">Nom</label>
                <input asp-for="Nom" class="form-control" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prenom" class="form-label">Prénom</label>
                <input asp-for="Prenom" class="form-control" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label">Âge</label>
                <input asp-for="Age" type="number" class="form-control" required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bonheur" class="form-label">Bonheur</label>
                <input asp-for="Bonheur" class="form-control" required />
                <span asp-validation-for="Bonheur" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fertilite" class="form-label">Fertilité</label>
                <input asp-for="Fertilite" class="form-control" required />
                <span asp-validation-for="Fertilite" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PointsDeMerites" class="form-label">Points de Mérites</label>
                <input asp-for="PointsDeMerites" class="form-control" required />
                <span asp-validation-for="PointsDeMerites" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>

@section Scripts {
    <script>
        // Ajoutez des scripts personnalisés si nécessaire
    </script>
}
