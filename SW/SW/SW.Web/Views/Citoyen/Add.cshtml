@model SW.Models.Citoyen

@{
    ViewData["Title"] = "Add";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h1 class="mb-4">Ajouter un Citoyen</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" asp-controller="Citoyen" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nom" class="form-label">Nom</label>
                <input asp-for="Nom" class="form-control" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prenom" class="form-label">Prénom</label>
                <input asp-for="Prenom" class="form-control" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label">Âge</label>
                <input asp-for="Age" type="number" class="form-control" required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PereBiologiqueID" class="form-label">Père Biologique</label>
                <select name="PereBiologiqueID" asp-items="@(new SelectList(Model.Citoyens, "Id", "Nom"))" class="form-select">
                    <option value="">Sélectionnez le père</option>
                </select>
                <span asp-validation-for="PereBiologiqueID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MereBiologiqueID" class="form-label">Mère Biologique</label>
                <select name="MereBiologiqueID" asp-items="@(new SelectList(Model.Citoyens, "Id", "Nom"))" class="form-select">
                    <option value="">Sélectionnez la mère</option>
                </select>
                <span asp-validation-for="MereBiologiqueID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>

@section Scripts {
    <script>
        // Ajoutez des scripts personnalisés si nécessaire
    </script>
}
